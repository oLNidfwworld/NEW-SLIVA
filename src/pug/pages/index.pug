extends ../layout/main

block variables
  - var title = 'Главная';
  - var description = 'Главная страница';
  - var pageClass = 'index';
  


block content
  .container
    section.banners
      .banners__wrapper
        .swiper-wrapper
          .swiper-slide
            .banners__image-wrapper
              picture
                source(srcset='/assets/img/banner-slide-mid.png' media='(min-width:720px) and (max-width:1023px)')
                source(srcset='/assets/img/banner-slide-pc.png' media='(min-width:1024px)')
                source(srcset='/assets/img/banner-slide-mob.png' )
                image.banners__image-content
          .swiper-slide
            .banners__image-wrapper
              picture
                source(srcset='/assets/img/banner-slide-mid.png' media='(min-width:720px) and (max-width:1023px)')
