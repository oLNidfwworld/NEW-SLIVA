                source(srcset='/assets/img/banner-slide-mob.png' )
                image.banners__image-content
    section.mt-10
      .storys
        .storys__wrapper.swiper-wrapper
          .storys__item.swiper-slide
            .storys__item-wrapper
              .storys__icon.border-green
                img(src='/assets/img/storys-icons/story-logo-new.png')
