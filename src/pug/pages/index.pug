          .storys__item.swiper-slide
            .storys__item-wrapper
              .storys__icon.border-violet
                img(src='/assets/img/storys-icons/hoztovari-pic.png')
              span.storys__title Хозтовары
          .storys__item.swiper-slide
            .storys__item-wrapper
              .storys__icon.border-violet
                img(src='/assets/img/storys-icons/barilla-pic.png')
